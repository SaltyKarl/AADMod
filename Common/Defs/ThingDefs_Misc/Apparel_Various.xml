<Defs>

    <!-- ==================== Herald Pack ==================== -->

    <ThingDef ParentName="ArmorMachineableBase">
        <defName>AAD_Apparel_HeraldPack</defName>
        <label>Herald Backpack</label>
        <description>A mostly Decorative Backpack can be used to deploy shield recharger.</description>
        <graphicData>
            <texPath>Things/Item/HeraldPack/Herald_Pack_UI</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <techLevel>Ultra</techLevel>
        <statBases>
            <MaxHitPoints>100</MaxHitPoints>
            <WorkToMake>10000</WorkToMake>
            <Mass>1.5</Mass>
            <EquipDelay>1.5</EquipDelay>
        </statBases>
        <damageMultipliers>
            <li>
                <damageDef>AAD_BombSuper</damageDef>
                <multiplier>0</multiplier>
            </li>
        </damageMultipliers>
        <equippedStatOffsets>
            <RangedCooldownFactor>-0.2</RangedCooldownFactor>
        </equippedStatOffsets>
        <costList>
            <ComponentSpacer>1</ComponentSpacer>
            <Plasteel>40</Plasteel>
        </costList>
        <recipeMaker>
            <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
            <researchPrerequisite>CataphractArmor</researchPrerequisite>
            <skillRequirements>
                <Crafting>7</Crafting>
            </skillRequirements>
            <recipeUsers Inherit="False">
                <li>FabricationBench</li>
            </recipeUsers>
        </recipeMaker>
        <thingCategories>
            <li>ApparelMisc</li>
        </thingCategories>
        <apparel>
            <countsAsClothingForNudity>false</countsAsClothingForNudity>
            <wornGraphicPath>Things/Item/HeraldPack/Herald_Pack</wornGraphicPath>
            <bodyPartGroups>
                <li>Waist</li>
            </bodyPartGroups>
            <layers>
                <li>Belt</li>
            </layers>
            <tags>
                <li>HeraldT2</li>
            </tags>
            <defaultOutfitTags>
                <li>Worker</li>
                <li>Soldier</li>
                <li>Nudist</li>
            </defaultOutfitTags>
            <canBeDesiredForIdeo>false</canBeDesiredForIdeo>
        </apparel>
        <tradeTags>
            <li>Armor</li>
        </tradeTags>
        <comps>
            <li Class="VFECore.Abilities.CompProperties_AbilitiesApparel">
                <abilities>
                    <li>AAD_DeployShieldRecharger</li>
                </abilities>
            </li>
        </comps>
    </ThingDef>

