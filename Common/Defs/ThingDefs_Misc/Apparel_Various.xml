            <layers>
                <li>Overhead</li>
            </layers>
            <tags>
                <li>HeraldT1</li>
            </tags>
            <defaultOutfitTags>
                <li>Soldier</li>
            </defaultOutfitTags>
            <useDeflectMetalEffect>true</useDeflectMetalEffect>
            <forceEyesVisibleForRotations>
                <li>1</li>
                <li>2</li>
                <li>3</li>
            </forceEyesVisibleForRotations>
        </apparel>
        <comps>
            <li Class="CompProperties_Biocodable"/>
            <li Class="VFECore.Abilities.CompProperties_AbilitiesApparel">
                <abilities>
                    <li>AAD_DeployPikemen</li>
                </abilities>
            </li>
            <li MayRequire="kentington.saveourship2">
                <compClass>SaveOurShip2.CompEVA</compClass>
            </li>
        </comps>
        <thingSetMakerTags>
            <li>RewardStandardHighFreq</li>
        </thingSetMakerTags>
