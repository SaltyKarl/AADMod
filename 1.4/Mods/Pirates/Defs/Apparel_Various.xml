<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<!-- ==================== Warcasket ==================== -->

	<VFEPirates.WarcasketDef ParentName="VFEP_WarcasketHelmetBase" MayRequire="OskarPotocki.VFE.Pirates">
		<defName>AAD_WarcasketHelmet_Herald</defName>
		<label>Helmet of Defiler</label>
		<shortDescription>Helmet usually wear by Defiler</shortDescription>
		<description>Less of an Helmet more of a set of "life support" and combat computer, with a wetware component.</description>
		<graphicData>
			<texPath>Things/Item/HeraldWarcasket/HeraldWarcasketHelmet</texPath>
		</graphicData>
		<uiIconScale>1.25</uiIconScale>
		<statBases>
			<Mass>8</Mass>
			<ArmorRating_Sharp>2</ArmorRating_Sharp>
			<ArmorRating_Blunt>1.5</ArmorRating_Blunt>
			<ArmorRating_Heat>1</ArmorRating_Heat>
			<Insulation_Cold>10</Insulation_Cold>
			<Insulation_Heat>10</Insulation_Heat>
			<EquipDelay>1</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>0.15</MoveSpeed>
			<SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">0.1</SlaveSuppressionOffset>
		</equippedStatOffsets>
		<costList>
			<ComponentIndustrial>2</ComponentIndustrial>
			<ComponentSpacer>1</ComponentSpacer>
			<Plasteel>35</Plasteel>
			<Steel>75</Steel>
		</costList>
		<researchPrerequisites>
			<li>VFEP_SpacerWarcaskets</li>
		</researchPrerequisites>
		<apparel>
			<bodyPartGroups>
				<li>FullHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Item/HeraldWarcasket/HeraldWarcasketHelmet</wornGraphicPath>
			<layers>
				<li>Overhead</li>
			</layers>
			<tags>
				<li>WarcasketHerald</li>
			</tags>
		</apparel>
		<comps>
			<li Class="VFECore.Abilities.CompProperties_AbilitiesApparel">
				<abilities>
					<li>AAD_DeployMilitors</li>
				</abilities>
			</li>
		</comps>
		<modExtensions>
			<li Class="VFECore.ApparelExtension">
				<pawnCapacityMinLevels>
					<li>
						<capacity>Consciousness</capacity>
						<minLevel>1</minLevel>
					</li>
					<li>
						<capacity>Sight</capacity>
						<minLevel>1.5</minLevel>
					</li>
					<li>
						<capacity>Hearing</capacity>
						<minLevel>1.5</minLevel>
					</li>
					<li>
						<capacity>Talking</capacity>
						<minLevel>1.5</minLevel>
					</li>
					<li>
						<capacity>Breathing</capacity>
						<minLevel>1.5</minLevel>
					</li>
				</pawnCapacityMinLevels>
			</li>
		</modExtensions>
	</VFEPirates.WarcasketDef>

	<VFEPirates.WarcasketDef ParentName="VFEP_WarcasketArmorBase" MayRequire="OskarPotocki.VFE.Pirates">
		<defName>AAD_Warcasket_Herald</defName>
		<label>Defiler Sarcophagus</label>
		<shortDescription>Defiler Sarcophagus</shortDescription>
		<description>for an Herald to embody their master's wratrh is to be emtombed into such a Warmachine.</description>
		<graphicData>
			<texPath>Things/Item/HeraldWarcasket/HeraldWarcasket</texPath>
		</graphicData>
		<statBases>
			<Mass>75</Mass>
			<ArmorRating_Sharp>2</ArmorRating_Sharp>
			<ArmorRating_Blunt>1.5</ArmorRating_Blunt>
			<ArmorRating_Heat>1</ArmorRating_Heat>
			<Insulation_Cold>80</Insulation_Cold>
			<Insulation_Heat>80</Insulation_Heat>
			<EquipDelay>1</EquipDelay>
			<EnergyShieldRechargeRate>0.3</EnergyShieldRechargeRate>
			<EnergyShieldEnergyMax>5</EnergyShieldEnergyMax>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>0.25</MoveSpeed>
			<SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">0.3</SlaveSuppressionOffset>
		</equippedStatOffsets>
		<costList>
			<ComponentIndustrial>5</ComponentIndustrial>
			<ComponentSpacer>2</ComponentSpacer>
			<Plasteel>80</Plasteel>
			<Steel>175</Steel>
			<Uranium>50</Uranium>
		</costList>
		<researchPrerequisites>
			<li>VFEP_SpacerWarcaskets</li>
		</researchPrerequisites>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Legs</li>
				<li>Feet</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Item/HeraldWarcasket/HeraldWarcasket</wornGraphicPath>
			<layers>
				<li>OnSkin</li>
				<li>Middle</li>
				<li>Shell</li>
			</layers>
			<tags>
				<li>WarcasketHerald</li>
			</tags>
		</apparel>
		<comps>
			<li Class="CompProperties_Shield">
				<blocksRangedWeapons>false</blocksRangedWeapons>
				<compClass>AADMod.CompShieldEMPImmune</compClass>
			</li>
		</comps>
		<modExtensions>
			<li Class="VFECore.ApparelExtension">
				<traitsOnEquip>
					<li>VFEP_WarcasketTrait</li>
				</traitsOnEquip>
				<traitsOnUnequip>
					<li>VFEP_Shellcasket</li>
				</traitsOnUnequip>
				<carryingCapacity>75</carryingCapacity>
				<pawnCapacityMinLevels>
					<li>
						<capacity>Moving</capacity>
						<minLevel>1.5</minLevel>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<minLevel>1.5</minLevel>
					</li>
				</pawnCapacityMinLevels>
			</li>
		</modExtensions>
	</VFEPirates.WarcasketDef>

